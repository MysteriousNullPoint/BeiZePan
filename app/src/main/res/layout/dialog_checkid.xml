<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/input_dialog_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/dialog_check_background" />

    <TextView
        android:id="@+id/input_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="530px"
        android:layout_marginBottom="240px"
        android:text=""
        android:textSize="46px"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/input_dialog_background"
        app:layout_constraintStart_toStartOf="@+id/input_dialog_background" />

    <ImageView
        android:id="@+id/input_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53px"
        android:layout_marginEnd="20px"
        app:layout_constraintEnd_toEndOf="@+id/input_dialog_background"
        app:layout_constraintTop_toTopOf="@+id/input_dialog_background"
        app:srcCompat="@mipmap/scrap_page_bnt_cancel" />

    <ImageView
        android:id="@+id/input_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_dialog_background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/input_dialog_background"
        app:srcCompat="@drawable/file_btn_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>