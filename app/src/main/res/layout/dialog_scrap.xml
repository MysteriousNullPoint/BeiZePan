<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="882px"
    android:layout_height="540px"
    android:background="@mipmap/scrap_page_backgroud">

    <TextView
        android:id="@+id/dialog_scrap_instru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34px"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="55px"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_scrap_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220px"
        android:text="TextView"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_scrap_btn"
        android:layout_width="260px"
        android:layout_height="85px"
        android:layout_marginTop="500px"
        android:layout_marginBottom="50px"
        android:background="@drawable/scrap_btn_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_scrap_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54px"
        android:layout_marginEnd="42px"
        android:background="@mipmap/scrap_page_bnt_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_scrap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@drawable/scrap_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_scrap_instru" />

    <ImageView
        android:id="@+id/dialog_cup"
        android:layout_width="90px"
        android:layout_height="182px"
        android:visibility="invisible"
        android:layout_marginStart="230px"
        android:layout_marginBottom="130px"
        android:background="@drawable/cup_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_cupName"
        android:layout_width="90px"
        android:layout_height="30px"
        android:layout_marginTop="10px"
        android:background="@color/black"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="19px"
        app:layout_constraintStart_toStartOf="@+id/dialog_cup"
        app:layout_constraintTop_toBottomOf="@+id/dialog_cup" />

    <ImageView
        android:id="@+id/dialog_cupState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:visibility="invisible"
        android:background="@drawable/dialog_cup_state"
        app:layout_constraintBottom_toTopOf="@+id/dialog_cup"
        app:layout_constraintEnd_toEndOf="@+id/dialog_cup"
        app:layout_constraintStart_toStartOf="@+id/dialog_cup" />

    <ImageView
        android:id="@+id/dialog_scanning"
        android:layout_width="260px"
        android:layout_height="85px"
        android:layout_marginEnd="300px"
        android:layout_marginBottom="150px"
        android:visibility="invisible"
        app:srcCompat="@drawable/btn_scrap_scanning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>