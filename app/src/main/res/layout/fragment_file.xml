<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/file_page_backgroud"
    tools:context="com.example.file.fragment_file">

    <!-- TODO: Update blank fragment layout -->
    <GridView
        android:id="@+id/file_title_gridview"
        android:layout_width="1200px"
        android:layout_height="70px"
        android:numColumns="6"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/file_detail_gridview"
        android:layout_width="1428px"
        android:layout_height="744px"
        android:numColumns="6"
        android:columnWidth="238px"
        android:layout_marginStart="21px"
        android:layout_marginBottom="124px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/file_btn_clearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginEnd="72px"
        android:src="@drawable/file_bnt_clearall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/file_btn_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260px"
        android:layout_marginBottom="30px"
        android:src="@drawable/file_btn_export"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/file_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="260px"
        android:src="@drawable/file_btn_clearselect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/file_btn_export" />


</androidx.constraintlayout.widget.ConstraintLayout>