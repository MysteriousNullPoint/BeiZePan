<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/guide_backgroud"
    tools:context="com.example.guide.activity_guide_info">

    <EditText
        android:id="@+id/school"
        android:fontFamily="@font/simyou"
        android:textSize="50px"
        android:layout_width="866px"
        android:layout_height="wrap_content"
        android:layout_marginStart="542px"
        android:layout_marginTop="495px"
        android:background="@null"
        android:hint="输入学校名称"
        android:inputType="textNoSuggestions"
        android:textColor="#3399fe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/lab"
        android:fontFamily="@font/simyou"
        android:textSize="50px"
        android:layout_width="866px"
        android:layout_height="wrap_content"
        android:layout_marginTop="656px"
        android:background="@null"
        android:hint="输入仪器室名称"
        android:inputType="textNoSuggestions"
        android:textColor="#3399fe"
        app:layout_constraintStart_toStartOf="@+id/school"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="365px"
        android:layout_marginBottom="145px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/guide_nextstep_selected" />


</androidx.constraintlayout.widget.ConstraintLayout>