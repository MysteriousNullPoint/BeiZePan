<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/settings_addid"
        android:layout_width="882px"
        android:layout_height="540px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_addid_background" />

    <ImageView
        android:id="@+id/settings_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49px"
        android:layout_marginEnd="41px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/scrap_page_bnt_cancel" />

    <TextView
        android:id="@+id/settings_cardNO"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="230px"
        android:layout_marginBottom="280px"
        android:textColor="@color/blue"
        android:textSize="48px"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/settings_addid"
        app:layout_constraintEnd_toEndOf="@id/settings_addid" />

    <EditText
        android:id="@+id/settings_admin"
        android:layout_width="338px"
        android:layout_height="wrap_content"
        android:layout_marginStart="260px"
        android:layout_marginBottom="188px"
        android:background="@null"
        android:fontFamily="@font/simyou"
        android:hint="请设置管理员姓名"
        android:inputType="textNoSuggestions"
        android:textColor="#3399fe"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/settings_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/settings_addid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/settings_addid_page_b_bnt_ok" />
</androidx.constraintlayout.widget.ConstraintLayout>