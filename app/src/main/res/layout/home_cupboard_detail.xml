<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="798px"
    android:layout_height="70px"
    android:gravity="center">

    <TextView
        android:id="@+id/home_detail_instru"
        android:layout_width="350px"
        android:layout_height="70px"
        android:gravity="center_vertical|left"
        android:textSize="28px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_detail_stock"
        android:layout_width="80px"
        android:layout_height="70px"
        android:gravity="center_vertical|right"
        android:textSize="28px"
        app:layout_constraintStart_toEndOf="@+id/home_detail_instru"
        app:layout_constraintTop_toTopOf="@+id/home_detail_instru" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="30px"
        android:layout_height="70px"
        android:gravity="center_vertical|center"
        android:text="/"
        android:textSize="28px"
        app:layout_constraintStart_toEndOf="@+id/home_detail_stock"
        app:layout_constraintTop_toTopOf="@+id/home_detail_stock" />

    <TextView
        android:id="@+id/home_detail_sum"
        android:layout_width="80px"
        android:layout_height="70px"
        android:gravity="center_vertical|left"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/home_detail_scrap"
        android:layout_width="158px"
        android:layout_height="70px"
        android:gravity="center_vertical|center"
        app:layout_constraintStart_toEndOf="@+id/home_detail_sum"
        app:layout_constraintTop_toTopOf="@+id/home_detail_sum" />

    <ImageView
        android:id="@+id/home_button_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/cabinet_situation_but_baofei"
        app:layout_constraintBottom_toBottomOf="@+id/home_detail_sum"
        app:layout_constraintStart_toEndOf="@+id/home_detail_scrap"
        app:layout_constraintTop_toTopOf="@+id/home_detail_sum"/>

</androidx.constraintlayout.widget.ConstraintLayout>