<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="770px"
    android:layout_height="70px"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dock_tv_name"
        android:layout_width="180px"
        android:layout_height="70px"
        android:layout_marginStart="40px"
        android:gravity="left|center_horizontal"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/dock_detail_location"
        android:layout_width="370px"
        android:layout_height="45px"
        android:numColumns="5"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/dock_tv_name"
        app:layout_constraintTop_toTopOf="@+id/dock_tv_name" />

    <TextView
        android:id="@+id/dock_tv_count"
        android:layout_width="80px"
        android:layout_height="70px"
        android:gravity="left|center_horizontal"
        android:textSize="30px"
        app:layout_constraintStart_toEndOf="@+id/dock_detail_location"
        app:layout_constraintTop_toTopOf="@+id/dock_tv_name" />

    <ImageView
        android:id="@+id/dock_btn_detail"
        android:layout_width="82px"
        android:layout_height="40px"
        app:layout_constraintBottom_toBottomOf="@+id/dock_detail_location"
        app:layout_constraintStart_toEndOf="@+id/dock_tv_count"
        app:layout_constraintTop_toTopOf="@+id/dock_detail_location"
        app:srcCompat="@drawable/stock_btn_view" />
</androidx.constraintlayout.widget.ConstraintLayout>