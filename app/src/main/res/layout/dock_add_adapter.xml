<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700px"
    android:layout_height="70px">

    <TextView
        android:id="@+id/dock_add_item"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginStart="40px"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dock_add_item_id"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dock_add_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dock_add_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/delete_btn_red" />
</androidx.constraintlayout.widget.ConstraintLayout>